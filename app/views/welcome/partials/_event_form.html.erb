<%= bootstrap_form_for event do |f| %>
  <%= f.text_area :description %>
  <%= f.number_field :hours, in: 1..12, step: 1 %>
  <%= f.number_field :minutes, in: 0..45, step: 15 %>
  <%= f.hidden_field :worked_at, value: date %>
  <%= f.collection_select :project_id, current_user.projects, :id, :name %>
  <%= f.submit 'Submit' %>
<% end %>