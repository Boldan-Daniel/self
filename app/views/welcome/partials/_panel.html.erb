<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= title %></h3>
  </div>

  <div class="panel-body">
    <% events_at(date).each do |event| %>
      <%= render partial: 'welcome/partials/event', locals: { event: event } %>
    <% end %>

    <%= render partial: 'welcome/partials/new_event', locals: { date: date } %>
  </div>

  <div class="panel-footer">
    Total: <%= hours_worked date %>
  </div>
</div>