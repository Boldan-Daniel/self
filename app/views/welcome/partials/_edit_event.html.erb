<div class="modal fade" id="editEvent<%= event.id %>" tabindex="-1" role="dialog"
     aria-labelledby="editEventLabel<%= event.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="editEventLabel<%= event.id %>">What did you do?</h4>
      </div>
      <div class="modal-body">
        <%= render partial: 'welcome/partials/event_form', locals: { event: event, date: event.worked_at } %>
      </div>
    </div>
  </div>
</div>