<%= bootstrap_form_for event, namespace: event.persisted? ? "edit_event_#{event.id}" : 'new_event', remote: true do |f| %>
  <%= f.hidden_field :worked_at, value: @date || event.worked_at %>
  <%= f.hidden_field :user_id %>
  <%= f.text_area :description %>
  <%= f.select :hours, (0..12).to_a %>
  <%= f.select :minutes, (0...60).step(15).to_a %>
  <%= f.collection_select :project_id, current_user.projects, :id, :name %>
  <%= f.form_group :ot do %>
    <%= f.check_box :ot, label: 'Overtime' %>
  <% end %>
  <%= f.submit 'Submit' %>
<% end %>