<% if @success %>
  $('.modal.in').toggle()
  $('#eventInfo<%= @event.id %>')
          .replaceWith('<%= escape_javascript render(partial: 'welcome/event_info', locals: { event: @event }) %>');
<% else %>
  $('.modal.in .modal-body')
          .html('<%= escape_javascript render(partial: 'welcome/event_form', locals: { event: @event }) %>');
<% end %>