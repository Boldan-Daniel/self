<% if @success %>
  $('.modal.in').modal('toggle');
  $('.list-group').append('<%= escape_javascript render(partial: 'welcome/event_info', locals: { event: @event.reload }) %>');
<% else %>
  $('.modal.in .modal-body')
        .html('<%= escape_javascript render(partial: 'welcome/event_form', locals: { event: @event }) %>');
  $(document).trigger('ajax:complete');
<% end %>

