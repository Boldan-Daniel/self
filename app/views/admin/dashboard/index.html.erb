<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-12">
    <%= link_to 'Projects', admin_projects_path, class: 'btn btn-lg btn-default btn-block', role: 'button' %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-12">
    <%= link_to 'Users', admin_users_path, class: 'btn btn-lg btn-default btn-block', role: 'button' %>
  </div>
</div>

<div class="row margin-top-20">
  <div id="fromDate" class="col-md-offset-3 col-md-3 col-xs-6">
    <%= render partial: 'application/datepicker', locals: { placeholder: 'From...' } %>
  </div>

  <div id="toDate" class="col-md-3 col-xs-6">
    <%= render partial: 'application/datepicker', locals: { placeholder: 'To...' } %>
  </div>
</div>

<div class="row margin-top-20">
  <div class="col-md-offset-3 col-md-6 col-xs-12">
    <table id="eventsTable"
           class="table table-striped table-bordered table-responsive"
           data-source="<%= admin_reports_path format: 'json' %>">

      <thead>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Hours</th>
      </tr>
      </thead>

      <tbody>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-12">
    <%= link_to 'Export XLSX', '#', class: 'btn btn-lg btn-success btn-block', role: 'button',
                id: 'exportXls', data: { source: admin_reports_path(format: :xlsx) } %>
  </div>
</div>