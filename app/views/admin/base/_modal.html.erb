<div class="modal fade" id="add<%= resource_id %>" tabindex="-1" role="dialog"
     aria-labelledby="add<%= resource_id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="add<%= resource_id %>Label"><%= resource_title %></h4>
      </div>
      <div class="modal-body">
        <%= render partial: body, locals: defined?(form_params) ? form_params : {} %>
      </div>
    </div>
  </div>
</div>