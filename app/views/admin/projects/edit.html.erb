<% content_for :list_items do %>
  <% @project.user_projects.includes(:user).each do |user_project| %>
    <%= render partial: 'user_info', locals: { user: user_project.user, user_project: user_project } %>
  <% end %>
<% end %>

<% content_for :panel_title, @project.name.capitalize %>
<% content_for :custom_modal_id, 'addUser' %>

<% content_for :custom_modal do %>
  <%= render partial: 'application/modal',
             locals: { resource_name: 'User', resource_id: 'User', body: 'user_form', form_params: user_form_params } %>
<% end %>

<%= render file: 'application/panel' %>