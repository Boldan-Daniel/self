<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><%= @project.name.capitalize %></div>

      <% @project.user_projects.includes(:user).each do |user_project| %>
        <%= render partial: 'user_info', locals: { user: user_project.user, user_project: user_project } %>
      <% end %>

      <div class="panel-footer">
        <div style="text-align: center;">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addUser">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </button>
        </div>
      </div>

      <%= render partial: 'add_user' %>
    </div>
  </div>
</div>