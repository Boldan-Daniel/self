<% content_for :list_items do %>
  <% @user.projects.each do |project| %>
    <div class="list-group-item">
      <li class="list-group-item-heading"><%= link_to project.name, edit_admin_project_path(project) %></li>
    </div>
  <% end %>
<% end %>

<% content_for :panel_title, "Projects for: #{resource_name}" %>

<%= render file: 'admin/base/panel' %>

<% content_for :list_items, nil, flush: true do %>
  <!-- Making sure block gets passed -->
  <% @user.rates.each do |rate| %>
    <div class="list-group-item">
      <div class="row">
        <div class="col-xs-10">
          <h4 class="list-group-item-heading"> Rate from: <%= rate.available_from %></h4>
          <p class="list-group-item-text">Hourly Rate: <%= rate.hourly_rate %></p>
          <p class="list-group-item-text">Hourly Rate OT: <%= rate.hourly_rate_ot %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<% content_for :panel_title, "Rates for: #{resource_name}", flush: true %>

<%= render file: 'admin/base/panel' %>